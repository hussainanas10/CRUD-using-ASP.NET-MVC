@model demo.Model.Employede
@{
    ViewBag.Title = "Add Employees";
}
@using (Html.BeginForm("AddEmployee", "Home", FormMethod.Post))
{
    <div class="container mt-4">
        <h1 class="display-4 text-center">
            Employee Details
        </h1>
        <form id="book-form">
            <div class="form - group">
                <label for="EmployeeID">EmployeeID</label>
                @*@Html.TextBoxFor(x=>x.EmployeeID,new { @class= "form - group" })*@
                <input type="number" name="EmployeID" placeholder="52738" class="form-control" required/>
            </div>
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" name="Name" placeholder="Parkor" class="form-control" required/>
                @*@Html.TextBoxFor(x => x.Name, new { @class = "form - group" })*@

            </div>
            <div class="form-group">
                <label for="Salary">Salary</label>
                <input type="number" name="Salary" placeholder="20000" class="form-control" required/>
                @*@Html.TextBoxFor(x => x.Salary, new { @class = "form - group" })*@

            </div>
            <div class="form-group">
                <label for="Grade">Grade</label>
                <input type="text" name="Grade" placeholder="A" class="form-control" required/>
                @*@Html.TextBoxFor(x => x.Grade, new { @class = "form - group" })*@

            </div>
            <input type="submit" value="Add Employee" class="btn btn-primary btn-block">
        </form>
    </div>
}